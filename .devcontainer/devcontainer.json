// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-dockerfile
{
	"name": "preset-embedding",
	"build": {
		// Sets the run context to one level up instead of the .devcontainer folder.
		"context": "..",
		// Update the 'dockerFile' property if you aren't using the standard 'Dockerfile' filename.
		"dockerfile": "../Dockerfile"
	},
	// // should allow to pass args to docker build but not working 
	// // (from https://github.com/microsoft/vscode-remote-release/issues/3545)
	// "initializeCommand": [
	// 	"docker",
	// 	"build",
	// 	// set image name and tag
	// 	"--tag=preset-embedding:test",
	// 	// set dockerfile
	// 	"--file=Dockerfile",
	// 	// set context
	// 	"."
	// ],
	// // The docker image that will be used to create the container.
	// "image": "preset-embedding:test",
	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-python.pylint",
				"ms-python.black-formatter",
				"ms-python.isort",
				"Codeium.codeium",
				"VisualStudioExptTeam.vscodeintellicode",
				"VisualStudioExptTeam.intellicode-api-usage-examples",
				"magicstack.MagicPython",
				"littlefoxteam.vscode-python-test-adapter",
				"Gruntfuggly.todo-tree",
				"exiasr.hadolint"
			],
			"settings": {
				"editor.formatOnSave": true
			}
		}
	},
	// Run args to pass to the container.
	"runArgs": [
		"--gpus", // make all gpu devices available
		"all",
		"--shm-size=4g", // set shared memory to 4GB (for multi-threading)
		"--env-file", // set environment variables from .env (incl. credentials) (safe enough for now)
		".env"
	],
	"updateRemoteUserUID": false // avoid generating two images (UID and GID manually set)

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	// Uncomment the next line to run commands after the container is created.
	// "postCreateCommand": "cat /etc/os-release",
	// Uncomment to connect as an existing user other than the container default. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "devcontainer"
}